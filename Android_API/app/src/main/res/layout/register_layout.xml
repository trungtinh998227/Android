<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/learning" />

    <EditText
        android:id="@+id/et_name"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_user"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_user"
        android:layout_alignLeft="@id/et_name"
        android:layout_alignStart="@id/et_name"
        android:layout_marginTop="23dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:text="Name" />

    <EditText
        android:id="@+id/et_reg_username"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_reg_username"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_reg_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_name"
        android:layout_alignLeft="@id/et_name"
        android:layout_alignStart="@id/et_name"
        android:layout_marginTop="23dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:text="Username" />

    <EditText
        android:id="@+id/et_reg_password"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_reg_password"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tv_reg_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_reg_username"
        android:layout_alignLeft="@id/et_name"
        android:layout_alignStart="@id/et_name"
        android:layout_marginTop="23dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:text="Password" />

    <EditText
        android:id="@+id/et_reg_birth"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_reg_birth"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/tv_reg_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_reg_password"
        android:layout_alignLeft="@id/et_name"
        android:layout_alignStart="@id/et_name"
        android:layout_marginTop="23dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:text="Birth" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_reg_birth"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_login_register_green"
        android:text="Register" />

</RelativeLayout>